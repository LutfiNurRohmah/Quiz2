<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/masukTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/masuk"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/yellow"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/homeView"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/homeView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_home_24"
        android:background="@color/red"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/masukTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/personView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_person_24"
        android:background="@color/blue"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/masukTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nimView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/nim"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personView"/>

    <TextView
        android:id="@+id/masukButtonView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/masuk"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nimView"/>


</androidx.constraintlayout.widget.ConstraintLayout>